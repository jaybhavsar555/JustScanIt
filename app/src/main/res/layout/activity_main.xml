<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#D7D8FA">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnCustomer"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:background="@drawable/button_round"
        android:text="@string/customer"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnShopekeeper"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:background="@drawable/button_round"
        android:text="@string/shop_keeper"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnCustomer"
        app:layout_constraintVertical_bias="0.065" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnWholesaler"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="324dp"
        android:background="@drawable/button_round"
        android:text="@string/whole_saler"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnShopekeeper"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>